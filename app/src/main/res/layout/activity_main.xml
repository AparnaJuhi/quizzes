<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_anim"
android:id="@+id/myLayout"

    android:layout_height="match_parent"

    tools:context=".MainActivity">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                app:cardBackgroundColor="#2c3e50"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:textColor="#ffffff"
               android:layout_centerHorizontal="true"
               android:text="Question"
               android:id="@+id/que"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/que"
                    android:src="@drawable/taj"
                    android:scaleType="fitXY"
                    /></RelativeLayout>
            </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2c3e50"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cardView1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="#ffffff"
                android:text="Option1"
                android:id="@+id/opt1"/>
    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:layout_marginStart="40dp"
    app:cardBackgroundColor="#2c3e50"
    android:layout_marginEnd="40dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:id="@+id/cardView3"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/cardView2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Option2"
                android:textColor="#ffffff"
                android:id="@+id/opt2"/>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2c3e50"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cardView3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:text="Option3"
            android:id="@+id/opt3"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        app:cardBackgroundColor="#2c3e50"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cardView4">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Option4"
            android:textColor="#ffffff"
            android:id="@+id/opt4"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView7"
        android:layout_below="@+id/cardView5"
        app:cardBackgroundColor="#ffafbd"
        android:layout_marginBottom="186dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Your Score: 50/100"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/star"/>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        android:layout_alignParentRight="true"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView8"
        android:layout_above="@+id/cardView2"
        app:cardBackgroundColor="#FFDF00"
        android:layout_marginBottom="186dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/alarm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10"
            android:textSize="24sp"

            android:textColor="#000000"
            android:id="@+id/alarm"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="8dp"
        android:layout_alignParentRight="true"
        android:layout_height="72dp"

        android:id="@+id/cardView6"
        android:layout_below="@+id/cardView5"
        app:cardBackgroundColor="#FFDF00"
        android:layout_marginBottom="186dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textSize="24sp"
            android:textColor="#000000"
            android:id="@+id/image"/>

    </androidx.cardview.widget.CardView>

        </RelativeLayout>

